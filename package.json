{
  "name": "zimmar-accessibility-compliance-checker",
  "description": "A Figma plugin that checks for accessibility compliance issues within designs and helps you fix them.",
  "author": {
    "name": "Josh Praise",
    "email": "praizjosh@outlook.com"
  },
  "license": "MIT",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "commit": "commit",
    "dev": "npm run start",
    "build": "tsc -b && vite build --emptyOutDir=false && npm run build:main",
    "build:main": "esbuild plugin/code.ts --bundle --outfile=dist/code.js",
    "build:main:watch": "esbuild plugin/code.ts --bundle --outfile=dist/code.js --watch",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --max-warnings=0",
    "lint:debug": "eslint --ext .jsx,.js,.ts,.tsx ./src --debug --max-warnings=0",
    "lint:fix": "npx eslint \"src/**/*.{js,jsx,ts,tsx}\" --fix --max-warnings=0",
    "prepare": "husky",
    "preview": "vite preview",
    "start": "concurrently -n tsc,build,vite -c yellow,blue,green \"npm run tsc:watch\" \"npm run build:main:watch\" \"vite\"",
    "tsc:watch": "tsc -b --watch --preserveWatchOutput",
    "commitlint": "commitlint --edit"
  },
  "dependencies": {
    "@radix-ui/react-collapsible": "^1.1.3",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-tooltip": "^1.1.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "file-saver": "^2.0.5",
    "lucide-react": "^0.475.0",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/prompt-cli": "^19.8.1",
    "@eslint/js": "^9.19.0",
    "@figma/eslint-plugin-figma-plugins": "^0.15.0",
    "@figma/plugin-typings": "^1.107.0-beta.2",
    "@types/file-saver": "^2.0.7",
    "@types/node": "^22.13.1",
    "@types/react": "^18.3.7",
    "@types/react-dom": "^18.3.0",
    "@types/wcag-contrast": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.1.0",
    "vite-plugin-singlefile": "^2.1.0",
    "wcag-contrast": "^3.0.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npm run lint:fix",
      "prettier --write \"src/**/*.{js,jsx,ts,tsx}\" --config ./.prettierrc"
    ]
  }
}